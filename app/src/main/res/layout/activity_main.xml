<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btnsetting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#191919"
            android:src="@drawable/setting" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtcountry"
       android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Country"
        android:fontFamily="@font/roboto_black"
        android:layout_marginTop="5dp"
        android:textSize="32sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txtcity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="City"
        android:fontFamily="@font/roboto_medium"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:gravity="center"/>

     <com.google.android.material.card.MaterialCardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardUseCompatPadding="true"
         app:cardBackgroundColor="#292929"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:paddingBottom="20dp">

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:layout_weight="1">

                 <ImageView
                     android:id="@+id/weather_icon"
                     android:layout_width="75dp"
                     android:layout_height="75dp"/>

                 <TextView
                     android:id="@+id/txtcondition"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Condition"
                     android:gravity="center"
                     android:fontFamily="@font/roboto_medium"
                     android:textSize="22sp"
                     android:textColor="@color/white"
                     />

                 <TextView
                     android:id="@+id/txtdate"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/roboto_medium"
                     android:text="Date"
                     android:textColor="@color/white"
                     android:textSize="12dp" />


             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:layout_weight="1">
             <TextView
                 android:id="@+id/txtTemprature"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:textAlignment="center"
                 android:layout_weight="1"
                 android:text="0.0\u2103"
                 android:fontFamily="@font/roboto_medium"
                 android:textSize="40dp"
                 android:textColor="@color/white"
                 />

                 <ImageButton
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/reload_icon"
                     android:id="@+id/refreshbtn"
                     android:layout_gravity="center"
                     android:background="?android:attr/selectableItemBackground"
                     />

             </LinearLayout>

         </LinearLayout>



     </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#292929">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/Feellike"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Feel like"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="22sp"
            android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
        <TextView
            android:id="@+id/txtfeellike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0\u2103"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:layout_weight="1" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/feels_like"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#292929"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/Humidity"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Humudity"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "0%"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/humidity"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#292929"
            android:layout_marginLeft="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/windspeed"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Wind "
                    android:paddingBottom="1dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtwind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/wind_speed"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#292929"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Pressure"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Presure"
                    android:paddingBottom="1dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtpressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/pressure"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#292929"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Cloud"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Cloud"
                    android:paddingBottom="1dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtcloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/cloud"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#292929"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Chances_of_Rain"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Rain Chances"
                    android:paddingBottom="1dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtrainchance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_bold"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/rain"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>





</LinearLayout>